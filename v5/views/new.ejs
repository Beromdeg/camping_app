<% include partials/header%>
<div class ='container'>
    <div class ='row'>
        <h1 style ='text-align:center;'>Add New Camping Site</h1>
        <!--form to get the POST Request-->
        <div style ='width: 35%; margin: 20px auto;'>
            <form action = '/campsites' method = 'POST'>
               <!--adding spacing betn each inputs of our form with BS-->
               <div class ='form-group'>
                    <input class ='form-control' type = 'text' placeholder = 'site name' name = 'name'>    
               </div>
               <div class ='form-group'>
                    <input class ='form-control' type = 'text' placeholder = 'image url' name = 'image'>   
               </div>
               <div class ='form-group'>
                    <textarea class = 'form-control' rows = '5' placeholder = 'site description' name = 'description'></textarea>
                    <!--<input class ='form-control' type = 'text' placeholder = 'site description' name = 'description'> -->
               </div>
               <div class ='form-group'>
                   <button class ='btn btn-lg btn-primary btn-block'>ADD!</button>
               </div>
            </form>
            <a href = '/campsites'>Go Back</a>
        </div> <!--test style for oour form-->
    </div> <!--row-->
</div> <!--container-->

<% include partials/footer%>